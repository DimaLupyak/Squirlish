<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Squirlish.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Squirlish"
    xmlns:views="clr-namespace:Squirlish.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
       <Tab x:Name="HomeTab">
           <ShellContent ContentTemplate="{DataTemplate views:HomePage}" Route="home"/>
       </Tab>
        <Tab x:Name="LearnTab">
           <ShellContent ContentTemplate="{DataTemplate views:LearnPage}" Route="learn"/>
       </Tab>
        <Tab x:Name="CollectionsTab">
            <ShellContent ContentTemplate="{DataTemplate views:CollectionsPage}" Route="collections"/>
        </Tab>
    </TabBar>
</Shell>

